@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Medinova Admin - Yönetim Paneli</title>

    <link href="~/Templates/startbootstrap-sb-admin-2-gh-pages/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <link href="~/Templates/startbootstrap-sb-admin-2-gh-pages/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<body id="page-top">

    <div id="wrapper">

        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/Admin/AdminAbout/Index">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-hospital"></i>
                </div>
                <div class="sidebar-brand-text mx-3">Medinova <sup>Admin</sup></div>
            </a>

            <hr class="sidebar-divider my-0">

            <li class="nav-item">
                <a class="nav-link" href="/Admin/Dashboard/Index">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Panel Özeti</span>
                </a>
            </li>

            <hr class="sidebar-divider">

            <div class="sidebar-heading">Sistem Yönetimi</div>

            <li class="nav-item">
                <a class="nav-link" href="/Admin/AdminUser/Index">
                    <i class="fas fa-fw fa-users-cog"></i>
                    <span>Kullanıcılar & Roller</span>
                </a>
            </li>

            <hr class="sidebar-divider">

            <div class="sidebar-heading">İçerik Yönetimi</div>

            <li class="nav-item">
                <a class="nav-link" href="/Admin/AdminAbout/Index">
                    <i class="fas fa-fw fa-info-circle"></i>
                    <span>Hakkımızda (About)</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/Admin/AdminAboutItem/Index">
                    <i class="fas fa-fw fa-list-ul"></i>
                    <span>Hakkımızda Maddeleri</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/Admin/AdminBanner/Index">
                    <i class="fas fa-fw fa-image"></i>
                    <span>Banner Yönetimi</span>
                </a>
            </li>

            <hr class="sidebar-divider">

            <div class="sidebar-heading">Hastane İşlemleri</div>

            <li class="nav-item">
                <a class="nav-link" href="/Admin/AdminDoctor/Index">
                    <i class="fas fa-fw fa-user-md"></i>
                    <span>Doktorlar</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/Admin/AdminDepartment/Index">
                    <i class="fas fa-fw fa-briefcase-medical"></i>
                    <span>Bölümler</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/Admin/AdminAppointment/Index">
                    <i class="fas fa-fw fa-calendar-check"></i>
                    <span>Randevular</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/Admin/AdminTestimonial/Index">
                    <i class="fas fa-fw fa-comment-dots"></i>
                    <span>Referanslar</span>
                </a>
            </li>

            <hr class="sidebar-divider d-none d-md-block">

            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </ul>
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">

                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">@Session["fullName"]</span>
                                <img class="img-profile rounded-circle" src="~/Templates/startbootstrap-sb-admin-2-gh-pages/img/undraw_profile.svg">
                            </a>
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in">
                                <a class="dropdown-item" href="/Account/Logout">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Çıkış Yap
                                </a>
                            </div>
                        </li>
                    </ul>
                </nav>

                <div class="container-fluid">
                    @RenderBody()
                </div>

            </div>

            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Medinova @DateTime.Now.Year</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <script src="~/Templates/startbootstrap-sb-admin-2-gh-pages/vendor/jquery/jquery.min.js"></script>
    <script src="~/Templates/startbootstrap-sb-admin-2-gh-pages/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Templates/startbootstrap-sb-admin-2-gh-pages/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Templates/startbootstrap-sb-admin-2-gh-pages/js/sb-admin-2.min.js"></script>
</body>
</html>